    <script>
        /* ‚ïê‚ïê‚ïê CINEMATIC INTRO SEQUENCER ‚ïê‚ïê‚ïê */
        (function () {
            const cin = document.getElementById('cinematic');
            const cam = document.getElementById('cameraGround');
            const sceneLens = document.getElementById('sceneLens');
            const lensBody = document.getElementById('lensBody');
            const lightBeam = document.getElementById('lightBeam');
            const floatPhotos = document.querySelectorAll('.float-photo');
            const lensText = document.getElementById('lensText');
            const skipBtn = document.getElementById('skipBtn');
            let skipped = false;

            function endIntro() {
                if (skipped) return; skipped = true;
                cin.classList.add('done');
                document.body.classList.remove('intro-active');
                setTimeout(() => { cin.style.display = 'none'; triggerReveals() }, 1200);
            }
            skipBtn.addEventListener('click', endIntro);

            // Timeline
            // 0s: Traveler starts walking
            // 2.5s: Camera placed
            setTimeout(() => { if (!skipped) cam.classList.add('placed') }, 2500);
            // 4s: Transition to lens scene
            setTimeout(() => { if (!skipped) { document.getElementById('sceneRoad').style.opacity = '0'; sceneLens.classList.add('active') } }, 4000);
            // 5s: Lens glows
            setTimeout(() => { if (!skipped) lensBody.classList.add('glow') }, 5000);
            // 5.5s: Light beam burst
            setTimeout(() => { if (!skipped) lightBeam.classList.add('burst') }, 5500);
            // 6s: Photos appear
            setTimeout(() => { if (!skipped) floatPhotos.forEach((p, i) => setTimeout(() => p.classList.add('show'), i * 200)) }, 6000);
            // 7.5s: Text appears
            setTimeout(() => { if (!skipped) lensText.classList.add('show') }, 7500);
            // 9s: Lens zooms in and transition to website
            setTimeout(() => { if (!skipped) { lensBody.classList.add('zoom'); floatPhotos.forEach(p => p.style.opacity = '0'); lensText.style.opacity = '0' } }, 9000);
            // 10.5s: End intro
            setTimeout(() => { if (!skipped) endIntro() }, 10500);
        })();

        /* ‚ïê‚ïê‚ïê SCROLL REVEAL ‚ïê‚ïê‚ïê */
        function triggerReveals() {
            const els = document.querySelectorAll('.reveal');
            const obs = new IntersectionObserver(entries => {
                entries.forEach(e => { if (e.isIntersecting) { e.target.classList.add('vis'); obs.unobserve(e.target) } });
            }, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
            els.forEach(el => obs.observe(el));
        }
        // Also trigger on manual scroll before intro ends
        window.addEventListener('scroll', triggerReveals);

        /* Navbar scroll effect */
        window.addEventListener('scroll', () => {
            document.getElementById('mainNav').classList.toggle('scrolled', window.scrollY > 50);
        });
    </script>
